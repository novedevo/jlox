    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "AstPrinter",
            "request": "launch",
            "mainClass": "dev.nove.jlox.lox.AstPrinter",
            "projectName": "jlox"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Lox",
            "request": "launch",
            "mainClass": "dev.nove.jlox.lox.Lox",
            "projectName": "jlox"
        },
        {
            "type": "java",
            "name": "GenerateAst",
            "request": "launch",
            "mainClass": "dev.nove.jlox.tool.GenerateAst",
            "args": [
                "${workspaceFolder}/src/main/java/dev/nove/jlox/lox"
            ],
            "projectName": "jlox"
        }
    ]
}